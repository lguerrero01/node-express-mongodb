extends ../layout


block content
    a(href='/bicicletas/create') nueva bicicleta
    table.table
        thead
            tr
                th(scope='col') #
                th(scope='col') color
                th(scope='col') Modelo
                th(scope='col') ubicacion
        tbody
        each bici in bicis
            tr
                th(scope='row')
                    = bici.id
                    td= bici.color
                    td= bici.modelo
                    td= bici.ubicacion
                    td
                        a(href='/bicicletas' + bici.id + '/update') editar
                    td
                        form.inline(method='post' action='bicicletas/' + bici.id + '/delete')
                            input(type="hidden" name='id' value= bici.id)
                            button.link-button(type ='submit' name='submit_param' value='subtmit_value' class='btn')
                                = 'Eliminar'

